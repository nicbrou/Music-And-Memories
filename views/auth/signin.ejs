<h1 class="signUpHeading">Welcome Back!</h1>

<div class="container">
  <form
    class="signInForm"
    method="post"
    action="/auth/signin"
    style="font-family: 'Alata', sans-serif"
  >
    <div class="form-group">
      <label>Username:</label>
      <input name="username" type="text" class="form-control" />
    </div>

    <div class="form-group">
      <label>Email:</label>
      <input name="emailAddress" type="email" class="form-control" />
    </div>

    <div class="form-group">
      <label>Password:</label>
      <input name="password" type="password" class="form-control" />
    </div>
    <button
      id="signInButton"
      type="submit"
      class="btn btn-primary"
      href="/user/profile"
    >
      Sign In
    </button>
  </form>
</div>
